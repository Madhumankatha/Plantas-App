<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Plantas" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="Theme.Plantas.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="h1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#0000cc</item>
        <item name="theme">@style/TextAppearance.MaterialComponents.Headline1</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="h2" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#0000cc</item>
        <item name="theme">@style/TextAppearance.MaterialComponents.Headline2</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="h5" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="theme">@style/TextAppearance.MaterialComponents.Headline5</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="caption" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="theme">@style/TextAppearance.MaterialComponents.Headline5</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="Edittext" parent="Widget.Design.TextInputLayout">
        <item name="android:background">@drawable/bg_rectangle</item>
        <item name="android:textColorHint">@color/navy_blue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>